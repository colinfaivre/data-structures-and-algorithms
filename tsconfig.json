{
    "compilerOptions": {
        "composite": true,
        "outDir": "dist",
        "rootDir": "src",
        "target": "ES2018",
        "module": "commonJS",
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "types": []
    },
    "include": ["src", "tests"],
    "exclude": [
        "**/*.spec.ts"
    ]
}